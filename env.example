# Configuración de entorno para BobCoperation

# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Google Search Console Verification
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Facebook Pixel (opcional)
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=xxxxxxxxxxxxxxxxx

# LinkedIn Insight Tag (opcional)
NEXT_PUBLIC_LINKEDIN_INSIGHT_ID=xxxxxxxxx

# URL del sitio
NEXT_PUBLIC_SITE_URL=https://bob-chi-bice.vercel.app

# Configuración de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=ventas@bobsolution.com
SMTP_PASS=your-app-password

# Base de datos (si se implementa en el futuro)
DATABASE_URL=postgresql://username:password@localhost:5432/bobcoperation

# Configuración de Redis (para caché, opcional)
REDIS_URL=redis://localhost:6379

# Configuración de almacenamiento (opcional)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=bobcoperation-assets

# Configuración de notificaciones (opcional)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Configuración de seguridad
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=https://bobcoperation.com

# Configuración de desarrollo
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
